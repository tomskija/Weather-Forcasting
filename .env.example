# Environment variables template for Weather Forecasting Application
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENV=development
DEBUG=true
PORT=8000
HOST=0.0.0.0

# Python settings
PYTHONPATH=/workspace
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# WEATHER API KEYS (Required for live data)
# =============================================================================
# OpenWeatherMap API (https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# WeatherAPI.com (https://www.weatherapi.com/)
WEATHER_API_KEY=your_weatherapi_key_here

# National Weather Service (no key required, but rate limited)
NWS_USER_AGENT=your_app_name/1.0 (jray.tomski3@gmail.com)

# AccuWeather API (https://developer.accuweather.com/)
# ACCUWEATHER_API_KEY=your_accuweather_key_here

# =============================================================================
# DATA PROCESSING SETTINGS
# =============================================================================
# Data file paths (relative to project root)
DATA_DIR=weatherForcastingCalculator/Data
MODELS_DIR=models
CACHE_DIR=cache

# Data refresh intervals (in minutes)
DATA_REFRESH_INTERVAL=60
FORECAST_UPDATE_INTERVAL=360

# Machine Learning settings
MODEL_TRAINING_INTERVAL_HOURS=24
PREDICTION_WINDOW_DAYS=7
FEATURE_ENGINEERING_ENABLED=true

# =============================================================================
# DATABASE SETTINGS (Optional - uncomment if using database)
# =============================================================================
# PostgreSQL
# DATABASE_URL=postgresql://weather_user:weather_pass@postgres:5432/weather_forecast_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=weather_forecast_db
# DB_USER=weather_user
# DB_PASSWORD=weather_pass
# DB_SSL_MODE=prefer

# Redis Cache
# REDIS_URL=redis://redis:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# CACHE_TTL_SECONDS=3600

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/weather_app.log
ENABLE_FILE_LOGGING=true

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# GEOCODING AND LOCATION SERVICES
# =============================================================================
# Default locations for weather data (comma-separated)
DEFAULT_LOCATIONS=New York,Los Angeles,Chicago,Houston,Phoenix

# Geocoding API (for location lookup)
# OPENCAGE_API_KEY=your_opencage_api_key
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =============================================================================
# ALERTING AND NOTIFICATIONS
# =============================================================================
# Email notifications (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true
# ALERT_EMAIL_FROM=weather_app@yourdomain.com
# ALERT_EMAIL_TO=alerts@yourdomain.com

# Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#weather-alerts

# =============================================================================
# MACHINE LEARNING AND AI SETTINGS
# =============================================================================
# Model configuration
ML_MODEL_TYPE=random_forest
ENABLE_DEEP_LEARNING=false
TENSORFLOW_THREADS=4

# Feature selection
ENABLE_FEATURE_SELECTION=true
MAX_FEATURES=20
CROSS_VALIDATION_FOLDS=5

# Training settings
TRAIN_TEST_SPLIT=0.8
RANDOM_SEED=42
MODEL_SAVE_PATH=models/trained_models

# =============================================================================
# WEB SCRAPING SETTINGS
# =============================================================================
# Rate limiting for web scraping
SCRAPING_DELAY_SECONDS=2
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=30

# User agent for web requests
USER_AGENT=WeatherBot/1.0 (+https://github.com/tomskija/Weather-Forcasting)

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# API Security
# SECRET_KEY=your_secret_key_for_jwt_tokens_here
# API_RATE_LIMIT=100/hour
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false

# Testing
TEST_DATABASE_URL=sqlite:///test_weather.db
PYTEST_TIMEOUT=300

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Container settings
CONTAINER_PORT=8000
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# Health check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Timezone settings
TZ=UTC
DEFAULT_TIMEZONE=America/New_York